<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PursuitTimer.MainPage"
             x:Name="TimerPage">

    <Grid
        x:Name="TimerLayout">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>
        
        <Label
            Grid.Row="0"
            x:Name="LastSplitLabel"
            FontFamily="RobotoMono"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"/>

        <ScrollView
            Grid.Row="0"
            x:Name="SummaryView"
            IsVisible="false">
            <StackLayout
                x:Name="Summary">
            </StackLayout>
        </ScrollView>

        <Button
            Grid.Row="1"
            x:Name="StartBtn"
            Text="Start"
            Clicked="OnStartClicked" />

        <Button
            Grid.Row="1"
            x:Name="StopBtn"
            Text="Stop"
            Clicked="OnStopClicked"
            IsVisible="false" />

    </Grid>
</ContentPage>
