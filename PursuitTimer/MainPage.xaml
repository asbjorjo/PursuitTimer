<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:PursuitTimer"
             x:Class="PursuitTimer.MainPage">

    <ContentPage.Resources>
        <drawable:TimeDisplayDrawable x:Key="timedisplay" />
    </ContentPage.Resources>
    
    <ContentView
        x:Name="TimerView">
        <VerticalStackLayout 
            x:Name="TimerLayout"
            Spacing="0" 
            Padding="0,0"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <GraphicsView 
                x:Name="TimeDisplay"
                Drawable="{StaticResource timedisplay}"
                IsVisible="false" />

            <Button 
                x:Name="StartBtn"
                Text="Start"
                Clicked="OnStartClicked" />

            <Button
                x:Name="StopBtn"
                Text="Stop"
                Clicked="OnStopClicked"
                IsVisible="false" />

        </VerticalStackLayout>
    </ContentView>
</ContentPage>
