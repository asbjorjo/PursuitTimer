<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:PursuitTimer.Resources.Strings"
             x:Class="PursuitTimer.Pages.HomePage"
             x:Name="TimerPage">

    <StackLayout
        x:Name="TimerLayout"
        Padding="2"
        Spacing="2">
        <Button
            x:Name="SetupBtn"
            HeightRequest="64"
            FontFamily="B612Mono"
            FontSize="24"
            Text="{x:Static res:AppResources.Setup}"
            Command="{Binding SetupCommand}"/>
        <Button
            x:Name="SummaryBtn"
            HeightRequest="64"
            FontFamily="B612Mono"
            FontSize="24"
            Text="{x:Static res:AppResources.Summary}"
            IsEnabled="{Binding HasSummary}"
            Command="{Binding SummaryCommand}"/>
        <Button
            x:Name="StartBtn"
            HeightRequest="64"
            FontFamily="B612Mono"
            FontSize="24"
            Text="{x:Static res:AppResources.Timing}"
            Command="{Binding StartCommand}"/>
    </StackLayout>
</ContentPage>
