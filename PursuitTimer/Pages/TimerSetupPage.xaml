<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:PursuitTimer.Resources.Strings"
             x:Class="PursuitTimer.Pages.TimerSetupPage"
             Title="TimerSetupPage">    
    <Grid 
        x:Name="TimerSetupLayout">
        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition Height="64" />
        </Grid.RowDefinitions>

        <Entry x:Name="TargetEntry" 
               FontSize="24"
               FontFamily="B612Mono"
               Keyboard="Numeric" 
               Text="{Binding Targetsplit}" />

        <Button
            Grid.Row="2"
            x:Name="StopBtn"
            FontFamily="B612Mono"
            FontSize="24"
            Text="{x:Static res:AppResources.Timing}"
            Clicked="OnTimeClickedAsync"/>

    </Grid>
</ContentPage>
