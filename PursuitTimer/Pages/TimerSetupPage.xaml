<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:res="clr-namespace:PursuitTimer.Resources.Strings"
             x:Class="PursuitTimer.Pages.TimerSetupPage"
             Title="TimerSetupPage">
    <StackLayout 
        x:Name="TimerSetupLayout">
        
        <Entry x:Name="TargetEntry" 
               FontSize="24"
               FontFamily="B612Mono"
               Keyboard="Numeric" 
               Text="{Binding Targetsplit}" />

        <Button
            x:Name="ResetBtn"
            FontFamily="B612Mono"
            FontSize="24"
            Text="{x:Static res:AppResources.Reset}"
            Clicked="OnResetClickedAsync"/>

        <StackLayout
            x:Name="ConfirmationLayout"
            Orientation="Horizontal">
            <Button
                x:Name="CancelBtn"
                FontFamily="B612Mono"
                FontSize="24"
                Text="{x:Static res:AppResources.Cancel}"
                Clicked="OnCancelClickedAsync"/>
            <Button
                x:Name="SaveBtn"
                FontFamily="B612Mono"
                FontSize="24"
                Text="{x:Static res:AppResources.Save}"
                Clicked="OnSaveClickedAsync"/>
        </StackLayout>

    </StackLayout>
</ContentPage>
